{% extends 'base.html.twig' %}

{% block title %}TEST DefaultController!{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        user-select: none;
        color: #fff;
    }

    #background {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        filter: brightness(0.5);
        z-index: -10;
    }

    .container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 20px;
    }

    .container h1 {
        margin: 20px;
    }

    .content {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-template-rows: auto;
        gap: 20px;
    }
    
    .content .box {
        padding: 10px;
        border-radius: 15px;
        text-align: center;
        background: rgba(0, 0, 0, 0.6);
        box-shadow: 0 0 5px rgba(255, 255, 255);
        transition: 0.4s;
    }

    .content .box:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 15px rgba(255, 255, 255);
    }

    .content .box img {
        width: 150px;
        height: 150px;
        text-align: center;
    }

    .content p {
        font-size: 12px;
        font-weight: 400;
    }
</style>

<div class="container">
    <img src='https://wallpapercave.com/wp/wp9073812.jpg' alt='' id='background'/>
    <h1>LISTE DES PERSONNAGES VALORANT</h1>
    <div class='content'>
        {% for profil in agents %}
            <div class='box'>
                <img src='{{ profil.displayIcon }}' alt='' />
                <h2>{{ profil.displayName }}<h2>
                <p>{{ profil.description }}<p>
            </div>
        {% endfor %}
    </div>    
</div>
{% endblock %}